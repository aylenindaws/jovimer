<?xml version="1.0" encoding="utf-8"?>
<odoo>


<!-- FORM VIEW  -->

        <record id="view_transientmodel_wizard_form" model="ir.ui.view">
            <field name="name">transient.form</field>
            <field name="model">create.purchaseorder</field>
            <field name="arch" type="xml">
                <form string="Sale Order">
                    <p class="oe_grey"> </p>
                    <group>
                        <group>
                            <field name="partner_id" invisible="1"/>
                            <field name="date_order" string="Fecha de Orden"/>
                        </group>
                    </group>
         
                    <group>
                        <field name="new_order_line_ids" nolabel ="1">
                            <tree editable="botttom" create = 'false'>
                                <field name="product_id" string="Producto"/>
                                <field name="partner_id" string="Proveedor"/>
                                <field name="name" string="Descripcion"/>
                                <field name="purchase_price" string="Precio de Compra"/>
                                <field name="product_qty" string="Cantidad"/>
                                <field name="product_uom" groups="uom.group_uom" class="oe_inline" string="Unidad de Medida"/>
                            </tree>
                        </field>
                    </group>
                   
                    <footer>
                        <button name="action_create_purchase_order" string="Crear Orden de Compra" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

<!-- ACTION     -->

        <record id="action_transientmodel_wizard" model="ir.actions.act_window">
            <field name="name">Crear Orden de Compra</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.purchaseorder</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>