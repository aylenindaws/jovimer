<?xml version="1.0"?>
<odoo>
<data>

<!-- FORM VIEW  -->

        <record id="sale_order_view" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header>
                        <button name="%(action_transientmodel_wizard)d" string="Create Purchase Order" type="action" class="btn-primary" attrs="{'invisible':[('state','in',['done','cancel'])]}"/>
                </header>   
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="purchase_price"/>
                </xpath>
                
                <xpath expr="//page/field[@name='order_line']/.." position="after">
                    <page string="Related purchases" name="related_purchases">
                        <field name="purchase_related_ids" />
                    </page>
                </xpath>
            </field>
        </record>
    
    
        <record id="purchase_order_compras_view" model="ir.ui.view">
            <field name="name">purchase.order.compras.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="sale_related_id"/>
                </xpath>
                
                
            </field>
        </record>
    
</data>
</odoo>

