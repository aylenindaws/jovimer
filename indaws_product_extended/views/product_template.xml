<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_jovimer_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.jovimer.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="after">
                <page string="Plantillas de Jovimer" name="jovimer_template">
                    <group name="template">
                        <group name="template_left">
                            <field name="partner_id"/>
                            <field name="name"/>
                            <field name="partner_code"/>
                            <field name="product_id"/>
                            <field name="not_calculate_lumps"/>
                            <field name="not_active"/>
                            <field name="bulge"/>
                            <field name="uom_type"/>
                            <field name="uom_invoice"/>
                        </group>
                        <group name="template_right">
                            <field name="variety"/>
                            <field name="confection"/>
                            <field name="kg_net_bulge"/>
                            <field name="brand"/>
                            <field name="caliber"/>
                            <field name="category"/>
                            <field name="container"/>
                            <field name="label_templates"/>
                        </group>
                        <notebook>
                            <page string="Precios" name="jovimer_price">
                                <group name="template_right">
                                    <field name="week"/>
                                    <field name="sale"/>
                                    <field name="pvp_type"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
  