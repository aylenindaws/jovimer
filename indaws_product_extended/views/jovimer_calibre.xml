<odoo>
    <data>
        <!-- start:views -->
        <record model="ir.ui.view" id="jovimer_calibre_tree_view">
            <field name="name">jovimer_calibre_tree</field>
            <field name="model">jovimer.calibre</field>
            <field name="arch" type="xml">
                <tree string="Calibres">
                    <field name="name" />
                    <field name="code" />
                    <field name="abr" />
                    <field name="print_name" />
                    <field name="import_velneo" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="jovimer_calibre_form_view">
            <field name="name">jovimer_calibre_form</field>
            <field name="model">jovimer.calibre</field>
            <field name="arch" type="xml">
                <form string="Calibres">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="code" />
                            <field name="abr" />
                            <field name="print_name" />
                            <field name="import_velneo" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- end:views -->

        <!-- start:actions -->
        <record model="ir.actions.act_window"
            id="jovimer_calibre_list_action">
            <field name="name">jovimer_calibre</field>
            <field name="res_model">jovimer.calibre</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first jovimer calibre
                </p>
            </field>
        </record>
        <!-- end:actions -->

        <!-- start:menus -->

        <menuitem id="jovimer_calibre_config_submenu"
			name="Calibres"
            parent="stock.menu_stock_root"
			action="jovimer_calibre_list_action"
            groups=""
        />
        <!-- end:menus -->
    </data>
</odoo>