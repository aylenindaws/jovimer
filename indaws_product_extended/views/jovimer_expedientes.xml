<odoo>
    <data>
        <!-- start:views -->
        <record model="ir.ui.view" id="jovimer_expedientes_tree_view">
            <field name="name">jovimer_expedientes_tree</field>
            <field name="model">jovimer.expedientes</field>
            <field name="arch" type="xml">
                <tree string="Expedientes">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="date_end" />
                    <field name="date_start" />
                    <field name="time_arrive" />
                    <field name="registration" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="jovimer_expedientes_form_view">
            <field name="name">jovimer_expedientes_form</field>
            <field name="model">jovimer.expedientes</field>
            <field name="arch" type="xml">
                <form string="Expedientes">
                    <sheet>
                        <group>
                            <group>
                                <group>
                                    <field name="name" />
                                    <field name="partner_id" />
                                    <field name="download_partner_id" />
                                    <field name="date_end" />
                                    <field name="date_start" />
                                    <field name="time_arrive" />
                                    <field name="registration" />
                                    <field name="transport_int_partner_id" />
                                    <field name="transport_nat_partner_id" />
                                    <field name="international_transport_price" />
                                    <field name="national_transport_price" />
                                </group>
                                <group>
                                    <field name="payment" />
                                    <field name="order" />
                                    <field name="logistic" />
                                    <field name="invoice" />
                                    <field name="liquidation" />
                                    <field name="sale_account" />
                                    <field name="output" />
                                    <field name="no_bio" />
                                    <field name="observations" />
                                    <field name="num_prev" />
                                    <field name="serie" />
                                    <field name="series_name" />
                                    <field name="dossier_name" />
                                    <field name="campanya" />
                                    <field name="import_true" />
                                    <field name="order_close" />
                                </group>
                                <notebook>
                                    <page>
                                        <field name="order_id" />
                                    </page>
                                    <page>
                                        <field name="purchase_id" />
                                    </page>
                                </notebook>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- end:views -->

        <!-- start:actions -->
        <record model="ir.actions.act_window"
            id="jovimer_expedientes_list_action">
            <field name="name">jovimer_expedientes</field>
            <field name="res_model">jovimer.expedientes</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first jovimer expedientes
                </p>
            </field>
        </record>
    </data>
</odoo>