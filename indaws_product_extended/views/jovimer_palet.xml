<odoo>
    <data>
        <!-- start:views -->
        <record model="ir.ui.view" id="jovimer_palet_tree_view">
            <field name="name">jovimer_palet_tree</field>
            <field name="model">jovimer.palet</field>
            <field name="arch" type="xml">
                <tree string="Palets">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="jovimer_palet_form_view">
            <field name="name">jovimer_palet_form</field>
            <field name="model">jovimer.palet</field>
            <field name="arch" type="xml">
                <form string="Palets">
                    <sheet>
                        <group>
                            <group name="palet_details">
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- end:views -->

        <!-- start:actions -->
        <record model="ir.actions.act_window"
            id="jovimer_palet_list_action">
            <field name="name">jovimer_palet</field>
            <field name="res_model">jovimer.palet</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first jovimer palet
                </p>
            </field>
        </record>
    </data>
</odoo>