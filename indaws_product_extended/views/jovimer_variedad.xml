<odoo>
    <data>
        <!-- start:views -->
        <record model="ir.ui.view" id="jovimer_variedad_tree_view">
            <field name="name">jovimer_variedad_tree</field>
            <field name="model">jovimer.variedad</field>
            <field name="arch" type="xml">
                <tree string="Variedades">
                    <field name="name" />
                    <field name="code" />
                    <field name="abr" />
                    <field name="print_name" />
                    <field name="import_velneo" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="jovimer_variedad_form_view">
            <field name="name">jovimer_variedad_form</field>
            <field name="model">jovimer.variedad</field>
            <field name="arch" type="xml">
                <form string="Variedades">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="code" />
                            <field name="product_id" />
                            <field name="abr" />
                            <field name="print_name" />
                            <field name="import_velneo" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- end:views -->

        <!-- start:actions -->
        <record model="ir.actions.act_window"
            id="jovimer_variedad_list_action">
            <field name="name">jovimer_variedad</field>
            <field name="res_model">jovimer.variedad</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first jovimer variedad
                </p>
            </field>
        </record>
    </data>
</odoo>