<odoo>
    <data>
        <!-- start:views -->
        <record model="ir.ui.view" id="jovimer_marca_tree_view">
            <field name="name">jovimer_marca_tree</field>
            <field name="model">jovimer.marca</field>
            <field name="arch" type="xml">
                <tree string="Marcas">
                    <field name="name" />
                    <field name="code" />
                    <field name="abrev" />
                    <field name="print_name" />
                    <field name="import_velneo" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="jovimer_marca_form_view">
            <field name="name">jovimer_marca_form</field>
            <field name="model">jovimer.marca</field>
            <field name="arch" type="xml">
                <form string="Marcas">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="code" />
                            <field name="abrev" />
                            <field name="print_name" />
                            <field name="import_velneo" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- end:views -->

        <!-- start:actions -->
        <record model="ir.actions.act_window"
            id="jovimer_marca_list_action">
            <field name="name">jovimer_marca</field>
            <field name="res_model">jovimer.marca</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first jovimer marca
                </p>
            </field>
        </record>
    </data>
</odoo>