<odoo>
    <data noupdate="1">
        <record id="email_template_cuenta_venta" model="mail.template">
            <field name="name">Plantilla Proveedor</field>
            <field name="use_default_to" eval="False"/>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">Reclamaci√≥n ${object.name}</field>
            <field name="model_id" ref="indaws_product_extended.model_purchase_order"/>
            <field name="partner_to" >${object.partner_id.id}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
                <style>
                    <link rel='stylesheet' href='${object.get_base_url()}/web/static/lib/bootstrap/css/bootstrap.css'/>
                </style>
                <div style="background:#F0F0F0;color:#515166;padding:10px 0px;font-family:Arial,Helvetica,sans-serif;font-size:14px;">
                    <table style="width:600px;margin:5px auto;">
                        <tbody>
                            <tr>
                                <td>
                                    <img src="/logo.png?company=${object.company_id.id}" style="vertical-align:baseline;max-width:100px;"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table style="width:600px;margin:0px auto;background:white;border:1px solid #e1e1e1;">
                        <tbody>
                            <tr>
                                <td style="padding:15px 20px 10px 20px;">
                                    <p>Estimado <strong>${object.partner_id.name}</strong></p>
                                    <p>Adjuntamos en el email la cuenta de venta.</p>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:15px 20px 10px 20px;">
                                    <p>${object.observacionescliente}</p>
                                </td>
                            </tr>
                            <tr/>
                            <tr>
                                <td style="padding:15px 20px 10px 20px;">
                                    <p>Un saludo</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            ]]>
            </field>
        </record>
    </data>
</odoo>