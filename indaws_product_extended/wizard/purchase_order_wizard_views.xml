<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="jovimer_purchase_order_line_view_form" model="ir.ui.view">
        <field name="name">lineas.de.cuenta.de.venta</field>
        <field name="model">purchase.order.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Lineas de Cuenta de Venta">
                <field name="state" invisible="1"/>
                <field name="display_type" invisible="1"/>
                <group attrs="{'invisible': [('display_type', '!=', False)]}">
                    <group>
                        <field name="product_uom_category_id" invisible="1"/>
                        <field name="product_id" widget="many2one_barcode"
                               domain="[('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=',context.get('company_id'))]"/>
                        <label for="product_qty"/>
                        <div class="o_row">
                            <field name="product_qty"/>
                            <field name="product_uom" groups="uom.group_uom" attrs="{'required': [('display_type', '=', False)]}"/>
                        </div>
                        <field name="qty_received_method" invisible="1"/>
                        <field name="qty_received" string="Received Quantity" invisible="context.get('state', 'False') not in ['purchase', 'done']" attrs="{'readonly': [('qty_received_method', '!=', 'manual')]}"/>
                        <field name="qty_invoiced" string="Billed Quantity"  invisible="context.get('state', 'False') not in ['purchase', 'done']"/>
                        <field name="price_unit"/>
                        <field name="taxes_id" widget="many2many_tags" domain="[('type_tax_use', '=', 'purchase'), ('company_id', '=', context.get('company_id'))]" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="date_planned" widget="date" attrs="{'required': [('display_type', '=', False)]}"/>
                        <field name="account_analytic_id" colspan="2" domain="['|', ('company_id', '=', False), ('company_id', '=', context.get('company_id'))]" groups="analytic.group_analytic_accounting"/>
                        <field name="analytic_tag_ids" groups="analytic.group_analytic_tags" domain="['|', ('company_id', '=', False), ('company_id', '=', context.get('company_id'))]" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                </group>
                <label for="name" string="Section Name (eg. Products, Services)"
                       attrs="{'invisible': [('display_type', '!=', 'line_section')]}"/>
                <label for="name" string="Note" attrs="{'invisible': [('display_type', '!=', 'line_note')]}"/>
                <field name="name" nolabel="1" attrs="{'invisible': [('display_type', '=', False)]}"/>
            </form>
        </field>
    </record>

        <record id="purchase_order_line_form_action_indaws" model="ir.actions.act_window">
            <field name="name">Correccion.lineas.de.Cuentas.de.Ventas</field>
            <field name="res_model">purchase.order.line.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No purchase order found. Let's create one!
                </p><p>
                    Once you ordered your products to your supplier, confirm your request for quotation and it will turn into a purchase order.
                </p>
            </field>
        </record>
</odoo>