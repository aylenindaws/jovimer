	<record model="ir.ui.view" id="jovimer_confeccion_view_form">
    <field name="name">JOVIMER - confeccion</field>
    <field name="model">jovimer_confeccion</field>
    <field name="priority">0</field>
    <field name="arch" type="xml">
				<form name="Confecciones">
							<sheet>
								<group><group>
									<field name="name" required="1"/>
                    				<field name="codigo" invisible="1"/>
                    				<field name="abrev" string="Impresion" required="1"/>
									<field name="importado" readonly="1"/>
                    				<field name="importa" readonly="1"/>

                    				
                    				<field name="nombreimpresion" invisible="1"/>
                    				<field name="tara" required="1"/>

								</group><group>

								    <field name="unidabulto" required="1" options="{'no_create': True}"/>
									<field name="unidadesporbulto" required="1"/>
									<field name="kgnetobulto" required="1"/>
                    				<field name="bultoseuropalet" required="1"/>
                    				<field name="bultosgrandpalet" required="1"/>									
								
								
								
								</group></group>
							<group>
							<field name="plantilla" readonly="1"/>
							</group>
							
							</sheet>
						</form>
      </field>
    </record>



