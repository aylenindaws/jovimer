<odoo>
    <data>



<record model="ir.ui.view" id="jovimer_plantillaproductos_view_search">
      <field name="name">JOVIMER - Buscador Plantillas</field>
      <field name="model">jovimer_plantillaproductos</field>
      <field name="priority">0</field>
      <field name="arch" type="xml">
<search string="Plantilla de Productos">
                    <field name="name"/>
                    <field name="codproducto"/>
                    <field name="partner"/>
                    <separator/>
                    <field name="precio_semana"/>
					
					<field name="product"/>
                    <field name="bultos"/>					
                    <field name="variedad"/>
					<field name="confeccion"/>
                    <field name="marca"/>
                    <field name="calibre"/>
                    <field name="categoria"/>
                    <field name="envase"/>
					 <field name="noactivo"/>
					
					
                    <separator/>
                    <filter string="Precio" name="tiene_precio" domain="[('pvpvta', '!=', 0 )]"/>
					<group expand="0" string="Group By">
                        <filter string="Cliente" name="partner" domain="[]" context="{'group_by':'partner'}"/>
                        <filter name="variedad" string="Variedad" domain="[]" context="{'group_by':'variedad'}"/>
						<filter name="precio_semana" string="Semana" domain="[]" context="{'group_by':'precio_semana'}"/>

                    </group>
               </search>
      </field>
    </record>




<record model="ir.ui.view" id="jovimer_plantillaproductos_view_tree">
      <field name="name">JOVIMER - Plantillas de Producto</field>
      <field name="model">jovimer_plantillaproductos</field>
      <field name="priority">0</field>
      <field name="arch" type="xml">
	  <tree string="Plantillas de Producto" import="False">
                    <field name="partner"/>
                    <field name="name"/>
					<field name="codproducto"/>
                    <field name="product"/>
                    <field name="bultos"/>					
                    <field name="variedad"/>
					<field name="confeccion"/>
                    <field name="marca"/>
                    <field name="calibre"/>
                    <field name="categoria"/>
                    <field name="envase"/>
					<field name="plantillaetiquetas"/>
					<field name="noactivo"/>
		</tree>
      </field>
    </record>


<record model="ir.ui.view" id="jovimer_plantillaproductosprecios_view_tree">
      <field name="name">JOVIMER - Precios de Producto</field>
      <field name="model">jovimer_plantillaproductos</field>
      <field name="priority">0</field>
      <field name="arch" type="xml">
	  <tree string="Plantillas de Producto" import="False" editable="top">
                    <field name="partner" readonly="1"/>
                    <field name="name" readonly="1"/>
					<field name="codproducto" readonly="1"/>
                    <field name="product" readonly="1"/>
                    <field name="bultos" readonly="1"/>					
                    <field name="variedad" readonly="1"/>
					<field name="confeccion" readonly="1"/>
                    <field name="marca" readonly="1"/>
                    <field name="calibre" readonly="1"/>
                    <field name="categoria" readonly="1"/>
                    <field name="envase" readonly="1"/>
                    <field name="precio_semana"/>
                    <field name="pvpvta"/>
                    <field name="pvptipo"/>
                    <field name="invoiceid" readonly="1"/>
					<field name="saleline" readonly="1"/>
		</tree>
      </field>
    </record>


<record model="ir.ui.view" id="jovimer_plantillaproductos_view_form">
      <field name="name">JOVIMER - Plantillas de Producto</field>
      <field name="model">jovimer_plantillaproductos</field>
      <field name="priority">0</field>
      <field name="arch" type="xml">
	  <form string="Plantillas de Producto">
	  <sheet>
				<group><group>
				    <field name="noactivo"/>
                    <field name="partner" options="{'no_create': True}" required="1" attrs="{'readonly': [('noactivo','=', True)]}"/>
                    <field name="name" required="1"/>
					<field name="codproducto"/>
					<field name="product"  required="1" options="{'no_create': True}"/>
					<field name="nocalcbultos"/>
					<field name="noactivo"/>
					<label for="bultos"/>
					<div>
						<field name="bultos" class="oe-inline" required="1"/>
						<button name="calcula_bultos" icon="fa-spinner" type="object" string="" class="oe-inline" attrs="{'invisible': [('nocalcbultos','=', True)]}"/>
					</div>
					<field name="tipouom" required="1"  options="{'no_create': True}" help="Tipo Común de Pedido. Normalmente Euro Palets o Palet Gran"/>
					<field name="udfacturacion" options="{'no_create': True}" help="Si este campo se cumplimenta, se convierte la Unidad de Albarán/Factura por este Valor"/>
			
				</group><group>					
                     <field name="variedad" required="1" options="{'no_quick_create': True}"/>
					<field name="confeccion" required="1" options="{'no_quick_create': True}"/>
					<field name="kgnetobulto" required="1" />
						

                    <field name="marca" required="1" options="{'no_quick_create': True}"/>
                    <field name="calibre" required="1" options="{'no_quick_create': True}"/>
                    <field name="categoria" required="1" options="{'no_quick_create': True}"/>
                    <field name="envase" required="1" options="{'no_quick_create': True}"/>
                    <field name="plantillaetiquetas" required="1" options="{'no_quick_create': True}"/>
					</group>
					</group>
					<notebook>
					<page string="Precios">
					<group><group>
					<field name="precio_semana"/>
					<field name="pvpvta"/>
					<field name="pvptipo" options="{'no_quick_create': True}"/>
					</group></group>	
					</page>
					</notebook>
					
					</sheet>
		</form>
      </field>
    </record>

			  
  

