<odoo>
    <data>

<record model="ir.ui.view" id="jovimer_etiquetas_plantillas_view_tree">
      <field name="name">JOVIMER - Plantilla Etiquetas</field>
      <field name="model">jovimer_etiquetas_plantilla</field>
      <field name="priority">0</field>
      <field name="arch" type="xml">
	  <tree string="Plantillas de Etiqueta">
                    <field name="name"/>

		</tree>
      </field>
    </record>
	

<record model="ir.ui.view" id="jovimer_etiquetas_plantillas_view_form">
      <field name="name">JOVIMER - Plantilla Etiquetas</field>
      <field name="model">jovimer_etiquetas_plantilla</field>
      <field name="priority">0</field>
      <field name="arch" type="xml">
	  <form string="Plantillas de Etiqueta">
		<sheet>
			<group>
				<group>
					<field name="name"/>
					<field name="lang"  options="{'no_create': True}"/>
					<field name="write_uid"  readonly="1"/>
					<field name="write_date"  readonly="1"/>
				</group>
				<group>
				<div>
					<strong><h2><label for="name" string="Variables en el diseño de Etiqueta: "/></h2></strong><br/><br/>
					<label for="name" string="[PRODUCTO] - Producto"/><br/>
					<label for="name" string="[LOTE] - Lote"/><br/>
					<label for="name" string="[REFERENCIA JOVIMER] - Referecia Jovimer Pedido"/><br/>
					<label for="name" string="[REFERENCIA PROV] - Referecia Proveedor Pedido"/><br/>
					<label for="name" string="[BULTOS] - Bultos Pedido"/><br/>
					<label for="name" string="[PESO] - Peso"/><br/>
					<label for="name" string="[CONFECCION] - CONFECCION"/><br/>
					<label for="name" string="[VARIEDAD] - VARIEDAD"/><br/>
					<label for="name" string="[MARCA] - MARCA"/><br/>
					<label for="name" string="[CATEGORIA] - CATEGORIA"/><br/>
					<label for="name" string="[ENVASE] - ENVASE"/><br/>
				</div>
				</group>
				
			</group>
			<notebook>
				<page string="Etiqueta TXT">
					<group><group>
						<field name="contenido" string="Bulto"/>
					</group><group>
						<field name="contenidou" string="Unidad"/>
					</group></group>
				</page>
				<page string="Etiqueta Enriquecida">
					<field name="contenidohtml"/>
				</page>
				<page string="Plantillas de Producto">
					<field name="plantilla"/>
				</page>
				<page string="Etiquetas">
					<field name="etiquetas"/>				
				</page>
			</notebook>
		</sheet>
		</form>
      </field>
    </record>



<record model="ir.ui.view" id="jovimer_etiquetas_view_tree">
      <field name="name">JOVIMER - Etiquetas</field>
      <field name="model">jovimer_etiquetas</field>
      <field name="priority">0</field>
      <field name="arch" type="xml">
	  <tree string="Etiquetas" import="False">

                    <field name="expediente_serien"/>
                    <field name="expediente"/>
                    <field name="name"/>
                    <field name="purchaseorderline"/>
                    <field name="saleorderline"/>					
                    <field name="proveedor"/>
		</tree>
      </field>
    </record>



<record model="ir.ui.view" id="jovimer_etiquetas_view_form">
      <field name="name">JOVIMER - Etiquetas</field>
      <field name="model">jovimer_etiquetas</field>
      <field name="priority">0</field>
      <field name="arch" type="xml">
	  <form string="Plantillas de Etiqueta">
		<sheet>
			<group>
				<group>

					<field name="expediente_serien"/>
                    <field name="expediente"/>
					<field name="proveedor"/>

				</group>
				<group>
					<field name="name"/>
					<field name="plantillas"/>
				</group>
			</group>
			<notebook>
				<page string="Contenido TXT">
					<group><group>
						<field name="contenido" string="Bulto"/>
					</group><group>
						<field name="contenidou" string="Unidad"/>
					</group></group>
				</page>
				<page string="Etiqueta Enriquecida">
					<field name="contenidohtml"/>
				</page>
				<page string="Más Información">

				    <field name="purchaseorderline"/>
                    <field name="saleorderline"/>

					
				</page>

			</notebook>
		</sheet>
		</form>
      </field>
    </record>




	 <!-- Etiquetas -->
    <record model="ir.actions.act_window" id="action_jovimer_petiquetas">
      <field name="name">Pyme - Plantilla Etiquetas</field>
      <field name="res_model">jovimer_etiquetas_plantilla</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
    </record>
	 <!-- Etiquetas -->
    <record model="ir.actions.act_window" id="action_jovimer_etiquetas">
      <field name="name">Pyme - Etiquetas</field>
      <field name="res_model">jovimer_etiquetas</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
    </record>	





		 <menuitem name="Etiquetas"
         	  id="menu_jovimer_etiquetasmenu"
              parent="menu_mantenimientos_jovimer"
			  sequence="80"/> 

		 <menuitem name="Plantillas de Etiqueta"
         	  id="menu_jovimer_plantillasetiquetas"
              parent="menu_jovimer_etiquetasmenu"
			  sequence="1"
			  action="action_jovimer_petiquetas"/> 

		 <menuitem name="Etiquetas"
         	  id="menu_jovimer_etiquetas"
              parent="menu_jovimer_etiquetasmenu"
			  sequence="1"
			  action="action_jovimer_etiquetas"/> 	 
  
  </data>
</odoo>