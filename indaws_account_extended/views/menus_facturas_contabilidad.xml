<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!--    facturas cliente-->
    <record id="action_move_out_invoice_type" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
<!--            <field name="view_id" ref="view_out_invoice_tree"/>-->
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('move_type', '=', 'out_invoice')]</field>
            <field name="context">{'default_move_type': 'out_invoice'}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a customer invoice
              </p><p>
                Create invoices, register payments and keep track of the discussions with your customers.
              </p>
            </field>
        </record>

    <record model="ir.actions.act_window.view" id="action_move_out_invoice_type_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="account.view_out_invoice_tree"/>
        <field name="act_window_id" ref="action_move_out_invoice_type"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_move_out_invoice_type_kanban">
        <field eval="2" name="sequence"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="account.view_account_move_kanban"/>
        <field name="act_window_id" ref="action_move_out_invoice_type"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_move_out_invoice_type_form">
        <field eval="3" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account.view_move_form"/>
        <field name="act_window_id" ref="action_move_out_invoice_type"/>
    </record>

    <!--    facturas rectificativas cliente-->
    <record id="action_move_out_refund_type" model="ir.actions.act_window">
            <field name="name">Credit Notes</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
<!--            <field name="view_id" ref="view_invoice_tree"/>-->
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('move_type', '=', 'out_refund')]</field>
            <field name="context">{'default_move_type': 'out_refund'}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a credit note
              </p><p>
                Note that the easiest way to create a credit note is to do it directly
                from the customer invoice.
              </p>
            </field>
        </record>

    <record model="ir.actions.act_window.view" id="action_move_out_refund_type_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="account.view_invoice_tree"/>
        <field name="act_window_id" ref="action_move_out_refund_type"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_move_out_refund_type_kanban">
        <field eval="2" name="sequence"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="account.view_account_move_kanban"/>
        <field name="act_window_id" ref="action_move_out_refund_type"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_move_out_refund_type_form">
        <field eval="3" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account.view_move_form"/>
        <field name="act_window_id" ref="action_move_out_refund_type"/>
    </record>

    <!--    facturas proveedor-->
    <record id="action_move_in_invoice_type" model="ir.actions.act_window">
            <field name="name">Bills</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
<!--            <field name="view_id" ref="view_in_invoice_tree"/>-->
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
<!--            <field name="domain_force">[('move_type', '=', 'in_invoice'), ('otras_facturas', '=', False)]</field>-->
            <field name="domain">[('move_type', '=', 'in_invoice'), ('otras_facturas', '=', False)]</field>
            <field name="context">{'default_move_type': 'in_invoice'}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a vendor bill
              </p><p>
                Create invoices, register payments and keep track of the discussions with your vendors.
              </p>
            </field>
        </record>

    <record model="ir.actions.act_window.view" id="action_move_in_invoice_type_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="account.view_in_invoice_tree"/>
