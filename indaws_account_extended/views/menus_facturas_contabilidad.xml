        <field name="view_mode">kanban</field>
        <field name="view_id" ref="account.view_account_move_kanban"/>
        <field name="act_window_id" ref="action_move_in_invoice_type"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_move_in_invoice_type_form">
        <field eval="3" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account.view_move_form"/>
        <field name="act_window_id" ref="action_move_in_invoice_type"/>
    </record>

     <!--    facturas rectificativas proveedor-->
